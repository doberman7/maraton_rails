<h1>mate</h1>
<!-- mostrar formulario -->
<%= form_tag ("/welcome/question_form") %>
  <!-- hacer tabla -->
  <table>
    <tr>
      <!-- encabezado-->
      <th>Pregunta</th>
    </tr>
      <!-- del Deck traer items de mate e iterar-->
    <%@mat_items.each do |i|%>
      <tr>
          <!-- mostrar pregunta del item-->
          <td><%=i.question%></td>
      </tr>
      <tr>
        <td>
            <!-- asignar Array con respuesta del itemy dos numeros aleatorios y barajearlo-->
            <% ans = [i.answer, rand(5..10),rand(5..10)].shuffle %>
            <br>

    <!--CÃ’MO FUNCIONAN LOS RADIO BUTONS-->
    <!--fuente:  1.3.2 Radio Buttons  http://guides.rubyonrails.org/form_helpers.html -->

            <!-- hacer un radio boton donde el name es el input.id,  el value es el texto del Array en el index 0, esto es Array[0] -->
            <!--el output de html: <input type="radio" name="i.id" id="1_4" value="ans[0]"> -->
            <!--EJEMPLO: <input type="radio" name="1" id="1_4" value="4">-->
            <%= radio_button_tag(i.id, ans[0]) %>

            <!-- mostrar el texto, del Array[0] -->
            <!-- el output de html: <label for="ans[0]">ans[0]</label> -->
            <!--EJEMPLO <label for="9">9</label> -->
            <%= label_tag( ans[0]) %>

          <br>
            <%= radio_button_tag(i.id, ans[1]) %>
            <%= label_tag( ans[1] ) %>
          <br>
            <%= radio_button_tag(i.id, ans[2]) %>
            <%= label_tag( ans[2] ) %>
        </td>
      </tr>
    <%end%>
  </table>
<%= submit_tag ("Enviar") %>
